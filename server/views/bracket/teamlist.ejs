<!-- Main Content -->
<!--table background set makes the edit/delete look awkward
create button fixed -->
<div id="listPage">
<!-- <main class="container">-->
 
  <form class="form" method="post">
  <div class="row">
    <div id="tableteamlist" class="col-md-offset-5 col-md-12">
      <br>
      <h1>
        <!--<a target="_blank" href="#"> -->
         <img src="../../Assets/images/team_logo2.png" height="100" width="110px" style="float:left; margin-left: 0.2in; margin-right: 0.2in; margin-top: 0.1in;"/>
     
  
              <br> &nbsp; <%=title %> List
              
         <!-- </a>-->
        
        </h1>
      <% if(BracketList.length == 0){ %>
        <button type="button" class="btn btn-dark btn-lg px-4 gap-3 text-white">
          <a href="/bracket-list/createPage/" style="text-decoration:none; color:white">
          <i class ="fas fa-plus-circle"></i>
          Create Tournament</a>
        </button>&nbsp;
        <h1>No Tournament Created</h1>
      <br>
      <% } else{ %>  
        
      <button type="button" class="btn btn-dark btn-lg px-4 gap-3 text-white" id="create">
        <a href="/bracket-list/createPage/" style="text-decoration:none; color:white">
        Create Tournament</a>
      </button>
    <br>
  <div class="row">
    <!-- <div class ="column" style="width:800px">-->
      <table class="table table-bordered table-striped" style="background-color:#FFFFFF; style=width:800px">
        <thred class=" table bg-danger">
        <tr>
          <th id="tnumber" class="text-center" >Number</th>
          <th id="ttourinfo" class="text-center">Tournament Info</th>
          <th class="text-center">Game Info</th>
          <th class="text-center">Total teams</th>
          <th class="text-center"></th>
          <th class="text-center"></th>
          </tr>
        </thred>
        <% for (let count=0; count< BracketList.length; count++){%>
          <tr style="width:580%">
            <td width="20px" class="text-centre "><%=count+1 %></td>
            <td class="text-centre "><%=BracketList[count].tournamentName %></td>
            <td class="text-centre "><%=BracketList[count].gameType %></td>
            <td class="text-centre "><%=BracketList[count].players %></td>
            <td class="text-centre "><button class="btn btn-primary btn-sm">
              <a href="/bracket-list/show/<%= BracketList[count]._id %>" style="text-decoration:none; color:white">Details</a>
            </button></td>
            <td class="text-centre ">
              <button class="btn btn-warning btn-sm" >
              <a href="/bracket-list/delete/<%= BracketList[count]._id %>" style="text-decoration:none; color:white">
              Delete</a></button></td>
          </tr>
          <%}%>
      </table>
      </div>
    </div>
      <br>
      
      <% } %>
      <div style="height: 40px; ">

      </div>
      
      
      
    </div>
  </div>
  </form>

</main>
</div>
